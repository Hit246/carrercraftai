rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.email in ['admin@careercraft.ai', 'hitarth0236@gmail.com'];
    }

    // A user is a member of a team if their user document has a matching teamId.
    function isTeamMember(teamId) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
    }

    // A user is the owner of a team if they are the owner listed on the team document.
    function isTeamOwner(teamId) {
      return get(/databases/$(database)/documents/teams/$(teamId)).data.owner == request.auth.uid;
    }

    // Users can read/write their own document. Admins have full access.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth != null;
    }

    // Resumes are private to the user.
    match /resumes/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Team documents can be read by members and written by the owner.
    match /teams/{teamId} {
      allow read: if isTeamMember(teamId);
      allow write: if isTeamOwner(teamId);

      // Team members can be read by other team members. Only the owner can manage them.
      match /members/{memberId} {
        allow read: if isTeamMember(teamId);
        allow create, delete: if isTeamOwner(teamId);
      }
    }
    
    // Settings can only be managed by admins.
    match /settings/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
