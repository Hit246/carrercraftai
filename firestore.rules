
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin(email) {
      return email in ['admin@careercraft.ai', 'hitarth0236@gmail.com'];
    }

    // Admins have full access
    match /{document=**} {
      allow read, write: if isAdmin(request.auth.token.email);
    }
    
    // Users can read/update their own document.
    // New users can create their own document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
    }

    // Users can read/write their own resume.
    match /resumes/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Any authenticated user can create a team.
    // The team owner can read and update their team document.
    match /teams/{teamId} {
      allow create: if request.auth.uid != null;
      allow read, update: if request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.owner;
    }

    // Team owners can manage their team members.
    // Team members can read the list of members.
    match /teams/{teamId}/members/{memberId} {
        allow read: if request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.owner 
                    || exists(/databases/$(database)/documents/users/$(request.auth.uid))
                       && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;

        allow create, delete: if request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.owner;
    }

    // All users can read the global payment settings.
    match /settings/payment {
      allow read: if request.auth.uid != null;
    }
  }
}
