rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      // Users can read and update their own profile information.
      // Creation is handled during signup, deletion is restricted.
      allow read, update: if request.auth != null && request.auth.uid == userId;

      // Resume Versions Subcollection
      // A user can perform all actions on their own resume versions.
      match /resumeVersions/{versionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Teams Collection
    match /teams/{teamId} {
      // Allow the owner to create/read the team.
      allow read, create: if request.auth != null && request.auth.uid == request.resource.data.owner;

      // Team Members Subcollection
      match /members/{memberId} {
        // Allow the team owner to add/remove members.
        // Allow team members to read the member list.
        allow read, write: if request.auth != null && exists(/databases/$(database)/documents/teams/$(teamId)) && request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.owner;
      }
    }

    // Settings Collection (Admin Only)
    match /settings/{docId} {
      // Admins can read/write settings. Regular users can only read payment settings.
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email in ['admin@careercraft.ai', 'hitarth0236@gmail.com'];
    }
    
    // Support Requests
    match /supportRequests/{requestId} {
      // Users can create their own support requests.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Admins can read all support requests.
      allow read: if request.auth != null && request.auth.token.email in ['admin@careercraft.ai', 'hitarth0236@gmail.com'];
    }
  }
}
