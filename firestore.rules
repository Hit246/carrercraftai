rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return request.auth.token.email in ['admin@careercraft.ai', 'hitarth0236@gmail.com'];
    }

    // Users can only read their own data
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      // Admins can update any user, users can update their own doc
      allow write: if request.auth.uid == userId || isAdmin();
      // Only authenticated users can create their own user document
      allow create: if request.auth.uid == userId;
    }

    // Resumes: Users can read and write their own resume
    match /resumes/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Settings: Only admins can read/write payment settings
    match /settings/payment {
      allow read: if request.auth.uid != null; // All authenticated users can read
      allow write: if isAdmin();
    }

    // Teams:
    match /teams/{teamId} {
      // Allow read/write for admins or the team owner
      allow read, write: if isAdmin() || get(/databases/$(database)/documents/teams/$(teamId)).data.owner == request.auth.uid;
      
      // Team Members subcollection
      match /members/{memberId} {
         // Allow read/write for admins or the team owner
        allow read, write, delete: if isAdmin() || get(/databases/$(database)/documents/teams/$(teamId)).data.owner == request.auth.uid;
      }
    }
  }
}
