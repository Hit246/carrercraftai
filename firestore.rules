rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read their own user document. They can also create, read, update, and delete their own resume versions.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;

      match /resumeVersions/{versionId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Admins can manage all users, upgrade requests, and settings.
    function isAdmin() {
      return request.auth.token.email in ['admin@careercraft.ai', 'hitarth0236@gmail.com'];
    }

    match /users/{userId} {
      allow read, write: if isAdmin();
    }
    
    // Teams can be managed by their owners.
    match /teams/{teamId} {
      allow read, write: if request.auth.uid == resource.data.owner;
      match /members/{memberId} {
        allow read, write: if request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.owner;
      }
    }

    // Payment settings are read-only for authenticated users, but writable for admins.
    match /settings/payment {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Authenticated users can create support requests. Admins can read them.
    match /supportRequests/{requestId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if isAdmin();
    }
  }
}
