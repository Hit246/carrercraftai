rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and update their own user document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid != null;
      
      // A user can manage their own resume versions.
      match /resumeVersions/{versionId} {
        allow get, create, update, delete: if request.auth.uid == userId;
      }
      
      // A user can list their own resume versions.
      allow list: if request.auth.uid == userId;
    }
    
    // Teams can be read by anyone, but only created by authenticated users.
    match /teams/{teamId} {
        allow read: if request.auth.uid != null;
        allow create: if request.auth.uid != null;
        
        // Team members can be managed by the team owner.
        match /members/{memberId} {
            allow read: if request.auth.uid != null;
            allow write, delete: if request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.owner;
        }
    }
    
    // Payment settings can be read by any authenticated user, but only written by an admin.
    match /settings/payment {
      allow read: if request.auth.uid != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.plan == 'admin';
    }

    // Support requests can be created by authenticated users, and read/updated by admins.
    match /supportRequests/{requestId} {
        allow create: if request.auth.uid != null;
        allow read, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.plan == 'admin';
    }
  }
}