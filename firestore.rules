rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.email_verified && request.auth.token.email in ['admin@careercraft.ai', 'hitarth0236@gmail.com'];
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isAdmin();
    }

    match /teams/{teamId} {
      allow read, write: if isAuthenticated() && (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId || isAdmin());
      match /members/{memberId} {
        allow read, write: if isAuthenticated() && (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId || isAdmin());
      }
    }

    match /users/{userId}/resumeVersions/{versionId} {
      allow read, write: if isOwner(userId);
    }
    
    match /settings/payment {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    match /supportRequests/{requestId} {
      allow read, write: if isAdmin();
      allow create: if isAuthenticated();
    }

  }
}
