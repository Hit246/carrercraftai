
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'admin@careercraft.ai' || 
        request.auth.token.email == 'hitarth0236@gmail.com'
      );
    }

    // Admin has full access to everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Public settings
    match /settings/{settingId} {
      allow read: if true;
    }

    // User documents and their subcollections (Recursive)
    match /users/{userId}/{allPaths=**} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    // Support Requests
    match /supportRequests/{requestId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      match /history/{messageId} {
        allow read, create: if isSignedIn() && 
          get(/databases/$(database)/documents/supportRequests/$(requestId)).data.userId == request.auth.uid;
      }
    }
  }
}
