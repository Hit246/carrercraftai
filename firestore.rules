
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.email in ['admin@careercraft.ai', 'hitarth0236@gmail.com'];
    }
    
    // USERS collection
    match /users/{userId} {
      // Anyone can create their own user document on signup
      allow create: if request.auth != null;
      
      // Users can only read their own document
      allow read: if isOwner(userId) || isAdmin();

      // Users can only update their own document, but cannot change their plan
      allow update: if isOwner(userId) && request.resource.data.plan == resource.data.plan;
      
      // Admins can update any user document (e.g., to change a plan)
      allow update: if isAdmin();

      // Users cannot delete their own accounts from the client
      allow delete: if isAdmin();

      // RESUME_VERSIONS subcollection
      match /resumeVersions/{versionId} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // TEAMS collection
    match /teams/{teamId} {
      // Allow read/write for admins or for users who are part of that team
      allow read, write: if isAdmin() || (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
                                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId);
                                       
      match /members/{memberId} {
         allow read, write: if isAdmin() || (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
                                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId);
      }
       match /candidates/{candidateId} {
         allow read, write: if isAdmin() || (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
                                       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId);
      }
    }
    
    // SETTINGS collection
    match /settings/{settingId} {
      // Only admins can change settings
      allow write: if isAdmin();
      // Any authenticated user can read settings (e.g., to get payment info)
      allow read: if request.auth != null;
    }

    // SUPPORT_REQUESTS collection
    match /supportRequests/{requestId} {
      // Any authenticated user can create a support request
      allow create: if request.auth != null;
      // Only admins can read/update/delete support requests
      allow read, update, delete: if isAdmin();
    }
  }
}
