
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only update their own user document.
    // Any authenticated user can create a user document (for signup).
    // Admins need to be able to read all user documents for the user management page.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow update: if request.auth.uid == userId;
      // This allows any authenticated user (including admins) to read the user list.
      // The app's UI already restricts who can see the admin panel.
      allow read: if request.auth != null;
      allow delete: if request.auth.uid == userId;
    }

    // Users can only read and write their own resume.
    match /resumes/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Team management rules
    match /teams/{teamId} {
      allow read, write: if request.auth.uid == resource.data.owner;

      match /members/{memberId} {
         // The team owner can add/remove members.
        allow create, delete: if request.auth.uid == get(/databases/$(database)/documents/teams/$(teamId)).data.owner;
        // Any member of the team can read the list of members.
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
      }
    }
  }
}
