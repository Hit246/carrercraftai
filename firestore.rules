rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an administrator
    function isAdmin() {
      return request.auth.token.email in ['admin@careercraft.ai', 'hitarth0236@gmail.com'];
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    // Rules for the 'resumes' collection
    match /resumes/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for the 'teams' collection
    match /teams/{teamId} {
      allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
      allow create: if request.auth != null;
      allow update, delete: if get(/databases/$(database)/documents/teams/$(teamId)).data.owner == request.auth.uid;

      // Rules for the 'members' subcollection
      match /members/{memberId} {
        allow read, list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teamId == teamId;
        allow create, delete: if get(/databases/$(database)/documents/teams/$(teamId)).data.owner == request.auth.uid;
      }
    }
    
    // Rules for the 'settings' collection (admin only)
    match /settings/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
