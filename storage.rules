rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /resumes/{teamId}/{fileName} {
      allow read, write: if request.auth != null; // Simplistic rule for now
    }
     match /payment_proofs/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /settings/{fileName} {
      allow read; // Anyone can read settings like QR codes
      // Write access should be admin-only, managed via backend/console
    }
  }
}
